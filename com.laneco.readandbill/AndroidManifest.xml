<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.laneco.readandbill"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="8"
        android:targetSdkVersion="21" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.BLUETOOTH" />
    <uses-permission android:name="android.permission.BLUETOOTH_ADMIN" />
    <application android:allowBackup="true" android:icon="@drawable/ic_launcher" android:label="@string/app_name" android:theme="@style/AppTheme">
        
        <activity android:label="@string/app_name" android:name="com.laneco.readandbill.SplashScreen">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:label="@string/app_name" android:name="com.laneco.readandbill.MyReadingEntry">
            <intent-filter>
                <action android:name="android.intent.action.READINGENTRY" />
                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity android:label="@string/app_name" android:name="com.laneco.readandbill.MyFieldFindingEntry">
            <intent-filter>
                <action android:name="android.intent.action.FIELDFINDINGENTRY" />
                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity android:label="@string/app_name" android:name="com.laneco.readandbill.MyConsumerList">
            <intent-filter>
                <action android:name="android.intent.action.CONSUMERLIST" />
                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity android:label="@string/app_name" android:name="com.laneco.readandbill.SummaryList">
            <intent-filter>
                <action android:name="android.intent.action.SUMMARY" />
                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity android:label="@string/app_name" android:name="com.lamerman.FileDialog">
            <intent-filter>
                <action android:name="android.intent.action.FILEDIALOG" />
                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity android:label="@string/app_name" android:name="com.generic.readandbill.BatchPrintingSOA">
            <intent-filter>
                <action android:name="android.intent.action.BATCHPRINTINGSOA" />
                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity android:name="com.androidapp.mytools.AppPreferenceActivity" />
    </application>

</manifest>
