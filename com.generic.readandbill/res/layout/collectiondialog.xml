<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout android:orientation="vertical" android:layout_width="fill_parent" android:layout_height="fill_parent"
  xmlns:android="http://schemas.android.com/apk/res/android">
    <DatePicker android:id="@id/datePicker" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_alignParentTop="true" android:layout_centerHorizontal="true" />
    <LinearLayout android:orientation="horizontal" android:layout_width="fill_parent" android:layout_height="fill_parent" android:layout_below="@id/datePicker" android:layout_alignParentLeft="true">
        <Button android:layout_gravity="top|center" android:id="@id/setFilter" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Set Filter" android:layout_weight="1.0" />
        <Button android:layout_gravity="top|center" android:id="@id/removeFilter" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Remove Filter" android:layout_weight="1.0" />
        <Button android:id="@id/cancel" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Cancel" android:layout_weight="1.0" />
    </LinearLayout>
</RelativeLayout>